{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "target": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": true // Ensure source maps are generated
  },
  "include": ["src/**/*.ts", "src/**/*.json"], // Include JSON files for type checking
  "exclude": ["node_modules"]
}
