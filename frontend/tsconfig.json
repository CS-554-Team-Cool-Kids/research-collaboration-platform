{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "target": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react-jsx" // Add this to support React's JSX
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include TSX
  "exclude": ["node_modules"]
}
